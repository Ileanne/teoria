grammar RuleGrammar

  rule inference_rule
    nt_symbol space? assign_symbol space? body probability? <InferenceRule>
  end

  rule body
    ( t_symbol / nt_symbol / space )* <Body>
  end

  rule t_symbol
    [a-z]+ <TSymbol>
  end

  rule nt_symbol
    [A-Z]+ <NTSymbol>
  end

  rule probability
    [0-9]+ '.' [0-9]+ <Probability>
  end

  rule assign_symbol
    ( '::=' / '->' )
  end

  rule space
    [\s\t]+
  end

end
 
